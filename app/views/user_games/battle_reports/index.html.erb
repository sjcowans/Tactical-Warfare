<center><div id="banner">
<h1>Tactical Warfare</h1>
</div>
<h4><div id="banner-2">
<table class='full-table'>
  <tr>
    <td>
      <%= link_to 'Main&nbsp;Menu'.html_safe, root_path, method: :get, class: 'banner-links' %>
    </td>
    <td>
      <%= link_to 'Dashboard', user_game_path(@user_game), class: 'banner-links' %>
    </td>
    <td>
      <%= link_to 'Recruit', "/user_games/#{@user_game.id}/recruit", class: 'banner-links' %>
    </td>
    <td>
      <%= link_to 'Explore&nbsp;Land'.html_safe,"/user_games/#{@user_game.id}/explore", class: 'banner-links' %>
    </td>
    <td>
      <%= link_to 'Build', "/user_games/#{@user_game.id}/build", class: 'banner-links' %>
    </td>
    <td>
      <%= link_to 'Research', "/user_games/#{@user_game.id}/research", class: 'banner-links' %>
    </td>
    <td>
      <%= link_to 'Nation&nbsp;Leaderboard'.html_safe, "/user_games/#{@user_game.id}/countries", class: 'banner-links' %>
    </td>
    <td>
      <%= link_to "Reports&nbsp;(#{@unread_reports.length})".html_safe, "/user_games/#{@user_game.id}/reports", class: 'banner-links' %>
    </td>
  </tr>
</table>
</div>
</h4>
</center>

<center>
<div class="green-bg">
<h3>Reports</h3>
  <div class="tan-bg">
<% if @unread_reports != [] %>
  <h3>Unread Reports:</h3>
  <%= link_to "Mark all as read", "/user_games/#{@user_game.id}/reports?read=1",  data: { turbo_method: :get, turbo_confirm: "Are you sure?" }%>
  <div class='reports'>
  <% @unread_reports.each do |report|%>
  <br><%= link_to "Battle # #{report.id}, Attacker: #{Country.find(report.attacker_country_id).name}, Defender: #{Country.find(report.defender_country_id).name}", "/user_games/#{@user_game.id}/country_battle_reports/#{report.id}?read=1", class: "banner-links"%><br>
  <% end %>
  </div>
<% end %>

<h4>Attack Reports:</h4><br> 
<div class='reports'>
<% @attack_reports.each do |report|%>
<br><%= link_to "Battle # #{report.id}, Attacker: #{Country.find(report.attacker_country_id).name}, Defender: #{Country.find(report.defender_country_id).name}", "/user_games/#{@user_game.id}/country_battle_reports/#{report.id}", class: "banner-links"%><br>
<% end %>
</div>

<h4>Defense Reports:</h4><br> 
<div class='reports'>
<% @defense_reports.each do |report|%>
<br><%= link_to "Battle # #{report.id}, Attacker: #{Country.find(report.attacker_country_id).name}, Defender: #{Country.find(report.defender_country_id).name}", "/user_games/#{@user_game.id}/country_battle_reports/#{report.id}", class: "banner-links"%><br>
<% end %>
</div>
</div>
</center>
</div>