    <%= form.label :turns_to_demolish_armories %>
    <%= form.number_field :demolish_armories %><br>
    <%= form.label :turns_to_demolish_hangars %>
    <%= form.number_field :demolish_hangars %><br>
    <%= form.label :turns_to_demolish_dockyards %>
    <%= form.number_field :demolish_dockyards %><br>
    <%= form.label :turns_to_demolish_labs %>
    <%= form.number_field :demolish_labs %><br>
  <%= form.submit "Demo" %>
<% end %><br>